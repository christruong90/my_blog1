<!DOCTYPE html>
<html>
<head>
  <title>MyBlog</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
    <%= link_to "Home",root_path %>
    |
    <%= link_to "About Page", about_path %>
    |
    <%= link_to "All Posts", posts_path %>
    |
    <!-- <%= link_to "Create A Post", new_post_path %> -->
    <!-- | -->


    <% if session[:user_id] %>
      Hello <%= link_to current_user.full_name, edit_user_path(current_user) %>
       |
       <%= link_to "Sign Out", sessions_path, method: :delete, data: {confirm: "are you sure you want to log out?"} %>
        |
       <%= link_to "Create a Post", new_post_path %>
       |
       <%= link_to "Your Favourite Posts", favourites_path %>
       |
       <%= link_to "Change Password", edit_password_path(current_user) %>

      <% else %>
        <%= link_to "Sign Up", new_user_path %>
        |
        <%= link_to "Sign In", new_session_path %>
      <% end %>


    <%#= link_to "Create a Comment", new_post_comment_path%>

    <%#= link_to "My Comments", new_post_comment_path %>

    <% if flash[:notice] %>
      <div class ="flash-notice"><%= flash[:notice] %></div>
    <% elsif flash[:alert] %>
      <div class="flash-alert"><%= flash[:alert] %> </div>
    <% end %>

<%= yield %>

</body>
</html>
